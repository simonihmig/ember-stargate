{
  "name": "ember-stargate",
  "version": "0.4.1",
  "description": "Modern lightweight portals for Ember",
  "keywords": [
    "ember-addon"
  ],
  "repository": "https://github.com/kaliber5/ember-stargate",
  "license": "MIT",
  "author": "Simon Ihmig <simon.ihmig@kaliber5.de>",
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "files": [
    "addon-main.js",
    "dist"
  ],
  "scripts": {
    "build": "rollup --config",
    "lint": "npm-run-all --aggregate-output --continue-on-error --parallel \"lint:!(fix)\"",
    "lint:fix": "npm-run-all --aggregate-output --continue-on-error --parallel lint:*:fix",
    "lint:hbs": "ember-template-lint .",
    "lint:hbs:fix": "ember-template-lint . --fix",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "start": "rollup --config --watch",
    "test": "echo 'Addon does not have tests, run tests in test-app'",
    "prepare": "yarn build"
  },
  "dependencies": {
    "@ember/render-modifiers": "^2.0.0",
    "@embroider/addon-shim": "^1.0.0",
    "@glimmer/component": "^1.1.2",
    "ember-resources": "^4.6.4",
    "tracked-maps-and-sets": "^3.0.1"
  },
  "devDependencies": {
    "@babel/core": "7.18.0",
    "@babel/preset-typescript": "7.17.12",
    "@embroider/addon-dev": "1.6.0",
    "@types/ember": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "5.25.0",
    "@typescript-eslint/parser": "5.25.0",
    "babel-eslint": "10.1.0",
    "ember-template-lint": "4.9.1",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-ember": "10.6.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-qunit": "7.2.0",
    "npm-run-all": "4.1.5",
    "rollup": "2.74.1",
    "rollup-plugin-ts": "^2.0.7",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": "12.* || >= 14"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "ember": {
    "edition": "octane"
  },
  "ember-addon": {
    "version": 2,
    "type": "addon",
    "main": "addon-main.js",
    "app-js": {
      "./components/portal-target.js": "./dist/_app_/components/portal-target.js",
      "./components/portal.js": "./dist/_app_/components/portal.js",
      "./services/-portal.js": "./dist/_app_/services/-portal.js"
    }
  },
  "release-it": {
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": false
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    }
  },
  "resolutions": {
    "socket.io": "4.5.1"
  },
  "exports": {
    "./*": "./dist/*",
    "./addon-main.js": "./addon-main.js"
  }
}
