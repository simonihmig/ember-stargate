{
  "workspaces": [
    "ember-stargate",
    "test-app"
  ],
  "private": true,
  "repository": "https://github.com/kaliber5/ember-stargate",
  "license": "MIT",
  "author": "Simon Ihmig <simon.ihmig@kaliber5.de>",
  "scripts": {
    "build": "yarn workspace ember-stargate run build",
    "lint": "yarn workspaces run lint",
    "lint:fix": "yarn workspaces run lint:fix",
    "prepare": "yarn build",
    "start": "concurrently 'npm:start:*' --restart-after 5000 --prefix-colors cyan,white,yellow",
    "start:addon": "yarn workspace ember-stargate run start",
    "start:test": "yarn workspace test-app run start",
    "test": "yarn workspaces run test"
  },
  "devDependencies": {
    "@release-it-plugins/lerna-changelog": "5.0.0",
    "@release-it-plugins/workspaces": "3.2.0",
    "concurrently": "7.6.0",
    "prettier": "2.8.5",
    "release-it": "15.9.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "release-it": {
    "plugins": {
      "@release-it-plugins/lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      },
      "@release-it-plugins/workspaces": true
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    },
    "npm": false
  },
  "version": "0.4.3",
  "volta": {
    "node": "18.16.0",
    "yarn": "1.22.19"
  }
}
